{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/daily-challenge",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/pre-generate-weekly",
      "schedule": "0 3 * * 0"
    },
    {
      "path": "/api/cron/weekly-teaser",
      "schedule": "0 10 * * 0"
    }
  ],
  "functions": {
    "app/api/cron/daily-challenge/route.ts": {
      "maxDuration": 120
    },
    "app/api/cron/pre-generate-weekly/route.ts": {
      "maxDuration": 300
    },
    "app/api/admin/pre-generate/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/weekly-teaser/route.ts": {
      "maxDuration": 120
    }
  }
}
